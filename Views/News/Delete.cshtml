@model mvc.Models.News

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/usersCRUD.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/default.css" asp-append-version="true" />

<h1 class="centerDiv">Are you sure you want to delete this entry?</h1>

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.id)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.title)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.description)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.publishDate)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.photo)
		</th>
	</tr>
	<tr>
		<td>
			@Html.DisplayFor(model => model.id)
		</td>
		<td>
			@Html.DisplayFor(model => model.title)
		</td>
		<td>
			@Html.DisplayFor(model => model.description)
		</td>
		<td>
			@Html.DisplayFor(model => model.publishDate)
		</td>
		<td>
			@if (!string.IsNullOrEmpty(Model.photo))
			{
				<a href="@Model.photo" target="_blank">@Html.DisplayFor(model => model.photo)</a>
			}
			@if (string.IsNullOrEmpty(Model.photo))
			{
				<span>No document uploaded</span>
			}
		</td>
	</tr>
</table>

<div class="centerDiv">
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn" /> |
        <a asp-action="Index" class="btn">Back to List</a>
    </form>
</div>
