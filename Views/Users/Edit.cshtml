@model mvc.Models.Users

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/usersCRUD.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/default.css" asp-append-version="true" />

<h1 class="centerDiv">Edit</h1>

<div class="centerDiv">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div>
            <label asp-for="UserName" class="control-label"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <label for="newPassword" class="control-label">New Password</label>
            <input type="password" name="newPassword" class="form-control" />
        </div>
        <div>
            <label asp-for="accountType" class="control-label"></label>
            <select asp-for="accountType" class="form-control">
                <option value="Admin">Admin</option>
                <option value="Suporter">Suporter</option>
                <option value="Vizitator">Vizitator</option>
            </select>
            <span asp-validation-for="accountType" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="subscriptionId" class="control-label"></label>
            <input asp-for="subscriptionId" class="form-control" />
            <span asp-validation-for="subscriptionId" class="text-danger"></span>
        </div>
        <div>
            <label for="photoPathFile" class="control-label">Upload Document</label>
            <input type="file" name="photoPathFile" id="photoPathFile" class="form-control" />
            <span class="text-danger">@ViewData["FileUploadError"]</span>
        </div>
        <div class="centerDiv">
            <input type="submit" value="Save" class="btn" />
        </div>
    </form>
</div>

<div class="centerDiv">
    <a asp-action="Index" class="btn" style="margin-bottom:60px;">Back to List</a>
</div>