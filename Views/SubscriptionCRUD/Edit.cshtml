@model mvc.Models.Subscription

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/usersCRUD.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/default.css" asp-append-version="true" />

<h1 class="centerDiv">Edit</h1>

<div class="centerDiv">
    <form asp-action="Edit">
        <input type="hidden" asp-for="id" />
        <div>
            <label asp-for="type" class="control-label"></label>
            <input asp-for="type" class="form-control" />
            <span asp-validation-for="type" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="expireDate" class="control-label"></label>
            <input asp-for="expireDate" class="form-control" type="datetime-local"/>
            <span asp-validation-for="expireDate" class="text-danger"></span>
        </div>

        <div class="centerDiv">
            <input type="submit" value="Save" class="btn" />
        </div>
    </form>
</div>

<div class="centerDiv">
    <a asp-action="Index" class="btn">Back to List</a>
</div>
