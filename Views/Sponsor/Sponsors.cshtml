@model IEnumerable<mvc.Models.Sponsor>

@{
    ViewData["Title"] = "Sponsors";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Universitatea Craiova</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="icon" href="~/images/logo.ico">
    <link rel="stylesheet" href="~/css/default.css">
    <link rel="stylesheet" href="~/css/sponsors.css">
</head>
<body>
    <section class="sponsors">
        <div class="createButton">
            <a class="menu-item" asp-action="Create">
                <i class="fa fa-plus-square" style="margin-right: 0.5em;"></i> Add sponsor
            </a>
        </div>
        <ul>
            @foreach (var sponsor in Model)
            {
                <li>
                    <a href="@sponsor.link">
                        <img src="@Url.Content(sponsor.photo)" alt="logo" width="300" height="300">
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="admin-menu">
                            <a class="menu-item" asp-action="Edit" asp-route-id="@sponsor.id">
                                <i class="fa fa-edit me-2"></i>Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@sponsor.id" method="post">
                                <button type="submit" class="menu-item">
                                    <i class="fa fa-trash me-2"></i>Delete
                                </button>
                            </form>
                        </div>
                    }
                    <p>
                        @sponsor.description
                    </p>
                </li>
            }
        </ul>
    </section>
    <script src="../js/footer.js"></script>
</body>
</html>
