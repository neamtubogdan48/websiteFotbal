@model mvc.Models.Contact

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/usersCRUD.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/default.css" asp-append-version="true" />

<h1 class="centerDiv">Create</h1>

<div class="centerDiv">
    <form asp-action="Create">
        <div>
            <label asp-for="message" class="control-label"></label>
            <input asp-for="message" class="form-control" />
            <span asp-validation-for="message" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="userId" class="control-label"></label>
            <input asp-for="userId" class="form-control" />
            <span asp-validation-for="userId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="timeSent" class="control-label"></label>
            <input asp-for="timeSent" class="form-control" type = "datetime-local"/>
            <span asp-validation-for="timeSent" class="text-danger"></span>
        </div>

        <div class="centerDiv">
            <input type="submit" value="Create" class="btn" />
        </div>
    </form>
</div>

<div class="centerDiv">
    <a asp-action="Index" class="btn">Back to List</a>
</div>

